{
  "cli": {
    "version": ">= 12.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "autoIncrement": true,
      "ios": {"simulator": true},
       "env": {
        "EAS_BUILD_AUTOINSTALL_COMMAND": "corepack enable && corepack prepare pnpm@10.18.1 --activate && pnpm install --frozen-lockfile --filter @project/mobile..."
      }
    },
    "preview": {
      "distribution": "internal",
      "autoIncrement": true
    },
    "production": {
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  },
  "hooks": {
    "pre-install": "corepack enable && corepack prepare pnpm@10.18.1 --activate"
  }
}
