{
  "cli": {
    "version": ">= 12.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "autoIncrement": true,
      "ios": { "simulator": true },
      "env": {
        "EAS_BUILD_AUTOINSTALL_COMMAND": "npm i -g pnpm@10.18.1 && pnpm config set store-dir ~/.pnpm-store && pnpm install --frozen-lockfile"
      }
    },
     "development-simulator": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": { "simulator": true },
      "env": {
        "EAS_BUILD_AUTOINSTALL_COMMAND": "npm i -g pnpm@10.18.1 && pnpm config set store-dir ~/.pnpm-store && pnpm install --frozen-lockfile"
        }
      },
    "preview": {
      "distribution": "internal",
      "autoIncrement": true
    },
    "production": {
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}